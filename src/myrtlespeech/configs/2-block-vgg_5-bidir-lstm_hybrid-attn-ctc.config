model {
  alphabet: "_abcdefghijklmnopqrstuvwxyz '."

  encoder_decoder {
    encoder {
      vgg {
        vgg_config: B;
        batch_norm: true;
        use_output_from_block: TWO;
      }

      rnn {
        rnn_type: LSTM;
        hidden_size: 1024;
        num_layers: 5;
        bias: True;
        bidirectional: true;
      }
    }

    decoder {
      fully_connected {
        num_hidden_layers: 0;
      }
    }
  }

  ctc_loss {
    blank_index: 0;
    reduction: MEAN;
  }

  pre_process_step {
    train_only: false;
    mfcc {
      numcep: 83;
      winlen: 0.025;
      winstep: 0.020;
    }
  }

  ctc_beam_decoder {
    blank_index: 0;
    beam_width: 20;
    prune_threshold: 0.001;
    separator_index: 27;
    langauge_model {
      no_lm { }
    }
    word_weight: 2.0;
  }
}

train_config {
  batch_size: 64;
  optimizer {
    momentum_optimizer {
      learning_rate {
        constant: 0.01;
      }
    }
    momentum: 0.9;
  }
  gradient_clipping_by_norm: 10.0;
  num_epochs: 100;
  sorta_grad: true;
}

eval_config {
}
